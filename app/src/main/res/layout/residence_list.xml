<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/RelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#55EFC4"
            android:clickable="true"
            android:focusable="true"
            android:onClick="Submit"
            android:padding="15dp">

            <TextView
                android:id="@+id/residence_ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="#1E272E"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/residence_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/residence_ID"
                android:paddingTop="4dp"
                android:text="@string/app_name"
                android:textColor="#1e272e"
                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/residence_available"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/residence_address"
                android:text="@string/app_name"
                android:textColor="#1e272e"
                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/residence_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/residence_available"
                android:text="@string/app_name"
                android:textColor="#1E272E"
                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/residence_rental"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/residence_size"
                android:text="@string/app_name"
                android:textColor="#1E272E"
                android:textSize="18sp"
                android:textStyle="italic" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>